<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/l_background"
    android:orientation="vertical"
    android:weightSum="100">

    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/wave_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

    </com.scwang.wave.MultiWaveHeader>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:background="@drawable/l_trans"
        android:orientation="vertical"
        android:weightSum="100">

        <ImageView
            android:id="@+id/im_blogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:alpha="0.2"
            android:background="@drawable/ic_blogo_1"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/im_logo"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/pyeslogo_r" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lay_top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_weight="50"
                android:background="@drawable/l_trans"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/tv_entity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:gravity="start"
                            android:padding="1dp"
                            android:text="@string/entity_label"
                            android:textColor="@color/color_label"
                            android:textSize="@dimen/normal_font_size" />

                        <Spinner
                            android:id="@+id/sp_entity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:drawableStart="@drawable/entity"
                            android:drawableLeft="@drawable/entity"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/normal_font_size" />

                        <TextView
                            android:id="@+id/tv_login_client_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:gravity="start"
                            android:padding="1dp"
                            android:text="@string/client_name_label"
                            android:textColor="@color/color_label"
                            android:textSize="@dimen/normal_font_size" />

                        <EditText
                            android:id="@+id/ed_login_client_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/rounded_w"
                            android:drawableStart="@drawable/client"
                            android:drawableLeft="@drawable/client"
                            android:gravity="start"
                            android:hint="@string/name_hint"
                            android:padding="1dp"
                            android:textColor="@color/color_edit"
                            android:textColorHint="@color/color_grey"
                            android:textSize="@dimen/normal_font_size" />

                        <TextView
                            android:id="@+id/tv_login_mobile_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:gravity="start"
                            android:padding="1dp"
                            android:text="@string/phone_no_label"
                            android:textColor="@color/color_label"
                            android:textSize="@dimen/normal_font_size" />

                        <EditText
                            android:id="@+id/ed_login_mobile_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/rounded_w"
                            android:drawableStart="@drawable/mobile"
                            android:drawableLeft="@drawable/mobile"
                            android:gravity="center"
                            android:hint="@string/mobile_no_hint"
                            android:padding="1dp"
                            android:textColor="@color/color_edit"
                            android:textColorHint="@color/color_grey"
                            android:textSize="@dimen/normal_font_size" />

                        <TextView
                            android:id="@+id/tv_login_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:gravity="start"
                            android:padding="1dp"
                            android:text="@string/email_label"
                            android:textColor="@color/color_label"
                            android:textSize="@dimen/normal_font_size" />

                        <EditText
                            android:id="@+id/ed_login_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/rounded_w"
                            android:drawableStart="@drawable/email"
                            android:drawableLeft="@drawable/email"
                            android:gravity="center"
                            android:hint="@string/email_hint"
                            android:padding="1dp"
                            android:textColor="@color/color_edit"
                            android:textColorHint="@color/color_grey"
                            android:textSize="@dimen/normal_font_size" />

                        <TextView
                            android:id="@+id/tv_login_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:gravity="start"
                            android:padding="1dp"
                            android:text="@string/password"
                            android:textColor="@color/color_label"
                            android:textSize="@dimen/normal_font_size" />

                        <EditText
                            android:id="@+id/ed_login_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/rounded_w"
                            android:drawableStart="@drawable/password"
                            android:drawableLeft="@drawable/password"
                            android:gravity="center"
                            android:hint="@string/password_hint"
                            android:importantForAutofill="no"
                            android:inputType="textPassword"
                            android:padding="1dp"
                            android:textColor="@color/color_edit"
                            android:textColorHint="@color/color_grey"
                            android:textSize="@dimen/normal_font_size" />

                        <TextView
                            android:id="@+id/tv_confirm_login_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:gravity="start"
                            android:padding="1dp"
                            android:text="@string/confirm_pwd"
                            android:textColor="@color/color_label"
                            android:textSize="@dimen/normal_font_size" />

                        <EditText
                            android:id="@+id/ed_confirm_login_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/rounded_w"
                            android:drawableStart="@drawable/password"
                            android:drawableLeft="@drawable/password"
                            android:gravity="center"
                            android:hint="@string/confirm_password_hint"
                            android:importantForAutofill="no"
                            android:inputType="textPassword"
                            android:padding="1dp"
                            android:textColor="@color/color_edit"
                            android:textColorHint="@color/color_grey"
                            android:textSize="@dimen/normal_font_size" />

                        <TextView
                            android:id="@+id/tv_login_verification_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:gravity="start"
                            android:padding="1dp"
                            android:text="@string/verification_code"
                            android:textColor="@color/color_label"
                            android:textSize="@dimen/normal_font_size" />

                        <EditText
                            android:id="@+id/ed_login_verification_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/rounded_w"
                            android:drawableStart="@drawable/verified"
                            android:drawableLeft="@drawable/verified"
                            android:gravity="center"
                            android:hint="@string/verification_code_hint"
                            android:padding="1dp"
                            android:textColor="@color/color_edit"
                            android:textColorHint="@color/color_grey"
                            android:textSize="@dimen/normal_font_size" />

                        <TextView
                            android:id="@+id/tv_language"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:gravity="start"
                            android:padding="1dp"
                            android:text="@string/language_label"
                            android:textColor="@color/color_label"
                            android:textSize="@dimen/normal_font_size" />

                        <Spinner
                            android:id="@+id/sp_language"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:drawableStart="@drawable/lang"
                            android:drawableLeft="@drawable/lang"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/normal_font_size" />

                        <TextView
                            android:id="@+id/tv_to_communicate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text=""
                            android:textColor="@color/color_label"
                            android:textSize="@dimen/small_font_size" />

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_app_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:gravity="center"
                android:padding="1dp"
                android:text="App Info"
                android:textColor="@color/color_orange"
                android:textSize="@dimen/small_font_size" />


            <LinearLayout
                android:id="@+id/lay_bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="10"
                android:gravity="start"
                android:weightSum="4">

                <Button
                    android:id="@+id/b_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_circle"
                    android:drawableEnd="@drawable/login"
                    android:drawableRight="@drawable/login"
                    android:text="@string/login_label"
                    android:textColor="@color/color_background"
                    android:textSize="@dimen/small_font_size" />

                <Button
                    android:id="@+id/b_FirstTimeCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_circle"
                    android:drawableEnd="@drawable/reg_w"
                    android:drawableRight="@drawable/reg_w"
                    android:text="@string/firsttimecheck_label"
                    android:textColor="@color/color_background"
                    android:textSize="@dimen/small_font_size" />


                <Button
                    android:id="@+id/b_reactivate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_circle"
                    android:drawableEnd="@drawable/react_w"
                    android:drawableRight="@drawable/react_w"
                    android:text="@string/reactivate_label"
                    android:textColor="@color/color_background"
                    android:textSize="@dimen/small_font_size" />

                <Button
                    android:id="@+id/b_login_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_circle"
                    android:drawableEnd="@drawable/logout"
                    android:drawableRight="@drawable/logout"
                    android:text="@string/exit_label"
                    android:textColor="@color/color_background"
                    android:textSize="@dimen/small_font_size" />


            </LinearLayout>
            <TextView
                android:id="@+id/tv_fingerprint_note"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/FINGERPRINT_Scan_Finger"
                android:textColor="@color/color_label"
                android:textSize="@dimen/normal_font_size" />
            <TextView
                android:id="@+id/tv_Forgot_Password"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:gravity="start"
                android:padding="2dp"
                android:text="@string/forgot_password"
                android:textColor="@color/color_turquoise"
                android:textSize="@dimen/normal_font_size" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>